<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Covid19Numbers.Views.SelectCountryPage">

    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <Label Text="Select A Country"/>
      <ListView Grid.Row="1" ItemsSource="{Binding Countries}" SelectedItem="{Binding SelectedCountry}">      <ListView.ItemTemplate>        <DataTemplate>          <TextCell Text="{Binding CountryName}"/>        </DataTemplate>      </ListView.ItemTemplate>    </ListView>

    </Grid>
  
</ContentPage>