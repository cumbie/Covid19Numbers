<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             xmlns:controls="clr-namespace:Covid19Numbers.Controls"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Covid19Numbers.Views.GlobalStatsPage"
             Title="Global Statistics">
  <!--//{
  //  "updated": 1586500201754,
  //  "cases": 1605372,
  //  "todayCases": 1720,
  //  "deaths": 95753,
  //  "todayDeaths": 61,
  //  "recovered": 356952,
  //  "active": 1152667,
  //  "critical": 49143,
  //  "casesPerOneMillion": 206,
  //  "deathsPerOneMillion": 12,
  //  "tests": 12662352,
  //  "testsPerOneMillion": 1624.8,
  //  "affectedCountries": 212
  //}-->

  <RefreshView IsRefreshing="{Binding IsRefreshing}" Command="{Binding RefreshCommand}"
               VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
    <ScrollView>

      <Grid BindingContext="{Binding GlobalStats}" Padding="10,0" ColumnSpacing="0" RowSpacing="0">
        <Grid.RowDefinitions>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="*"/>  <!--gap--> 
          <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition/>
          <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.ColumnSpan="2" Text="Global Statistics" Style="{StaticResource LabelHeading1}"
               HorizontalOptions="FillAndExpand"
               BackgroundColor="{StaticResource SectionHeaderColor}"/>

        <Label Grid.Row="1" Text="Total Cases" Style="{StaticResource LabelHeading}"/>
        <Label Grid.Row="1" Grid.Column="1" Text="{Binding Cases, StringFormat='{0:0,0}'}" Style="{StaticResource LabelValue}" TextColor="{StaticResource CasesTextColor}"/>

        <Label Grid.Row="2" Text="Today Cases" Style="{StaticResource LabelHeading}"/>
        <Label Grid.Row="2" Grid.Column="1" Text="{Binding TodayCases, StringFormat='{0:0,0}'}" Style="{StaticResource LabelValue}" TextColor="{StaticResource CasesTextColor}" />

        <Label Grid.Row="3" Text="Total Deaths" Style="{StaticResource LabelHeading}"/>
        <StackLayout Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Spacing="0">
          <Label Text="{Binding PercentDeaths, StringFormat=' ({0:0.0}%)'}" Style="{StaticResource LabelValue}" HorizontalTextAlignment="Start" />
          <Label Text="{Binding Deaths, StringFormat='{0:0,0}'}" Style="{StaticResource LabelValue}" TextColor="{StaticResource DeathsTextColor}" />
        </StackLayout>
      
        <Label Grid.Row="4" Text="Today Deaths" Style="{StaticResource LabelHeading}"/>
        <!--<Label Grid.Row="4" Grid.Column="1" Text="{Binding TodayDeaths, StringFormat='{0:0,0}'}" Style="{StaticResource LabelValue}" />-->
        <StackLayout Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Spacing="0">
          <Label Text="{Binding PercentTodayDeaths, StringFormat=' ({0:0.0}%)'}" Style="{StaticResource LabelValue}" HorizontalTextAlignment="Start" />
          <Label Text="{Binding TodayDeaths, StringFormat='{0:0,0}'}" Style="{StaticResource LabelValue}" TextColor="{StaticResource DeathsTextColor}" />
        </StackLayout>
      
        <Label Grid.Row="5" Text="Active" Style="{StaticResource LabelHeading}"/>
        <StackLayout Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Spacing="0">
          <Label Text="{Binding PercentActive, StringFormat=' ({0:0.0}%)'}" Style="{StaticResource LabelValue}" HorizontalTextAlignment="Start" />
          <Label Text="{Binding Active, StringFormat='{0:0,0}'}" Style="{StaticResource LabelValue}" />
        </StackLayout>

        <Label Grid.Row="6" Text="Recovered" Style="{StaticResource LabelHeading}"/>
        <StackLayout Grid.Row="6" Grid.Column="1" Orientation="Horizontal" Spacing="0">
          <Label Text="{Binding PercentRecovered, StringFormat=' ({0:0.0}%)'}" Style="{StaticResource LabelValue}" HorizontalTextAlignment="Start" />
          <Label Text="{Binding Recovered, StringFormat='{0:0,0}'}" Style="{StaticResource LabelValue}" />
        </StackLayout>

        <Label Grid.Row="7" Text="Critical" Style="{StaticResource LabelHeading}"/>
        <StackLayout Grid.Row="7" Grid.Column="1" Orientation="Horizontal" Spacing="0">
          <Label Text="{Binding PercentCritical, StringFormat=' ({0:0.0}%)'}" Style="{StaticResource LabelValue}" HorizontalTextAlignment="Start" />
          <Label Text="{Binding Critical, StringFormat='{0:0,0}'}" Style="{StaticResource LabelValue}" />
        </StackLayout>
      
        <Label Grid.Row="8" Text="Tests" Style="{StaticResource LabelHeading}"/>
        <Label Grid.Row="8" Grid.Column="1" Text="{Binding Tests, StringFormat='{0:0,0}'}" Style="{StaticResource LabelValue}" />
      
        <Label Grid.Row="9" Text="Countries Affected" Style="{StaticResource LabelHeading}"/>
        <Label Grid.Row="9" Grid.Column="1" Text="{Binding AffectedCountries}" Style="{StaticResource LabelValue}" />

        <Label Grid.Row="10" Text="Last Update" Style="{StaticResource LabelHeading}"/>
        <Label Grid.Row="10" Grid.Column="1" Text="{Binding UpdateTime}" Style="{StaticResource LabelValue}" />

        <!--gap--> 

        <!--<controls:AdMobView Grid.Row="12" Grid.ColumnSpan="2" AdUnitId="{Binding AdUnitID}" BackgroundColor="Transparent"
                            HorizontalOptions="FillAndExpand"/>-->
      </Grid>

    </ScrollView>
  </RefreshView>
  
</ContentPage>